<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ChangeProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/background"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/change_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/profileCard"
            android:layout_width="411dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="#FFFFFF">


            <androidx.cardview.widget.CardView
                android:id="@+id/profileCardBeige"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:backgroundTint="#ECE5DC">



                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="50dp"
                    android:text="@string/username"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="60dp"
                    android:id="@+id/usernameValue2"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/black"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/black"
                    android:hint="@string/username"
                    android:paddingStart="20dp"
                    android:textSize="18sp"/>


                <TextView
                    android:id="@+id/Email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginBottom="50dp"
                    android:text="@string/email"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />


                <EditText
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="150dp"
                    android:id="@+id/emailValue2"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/black"
                    app:boxCornerRadiusTopStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusBottomEnd="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:textColor="@color/black"
                    android:paddingStart="20dp"
                    android:hint="@string/email"
                    android:textSize="18sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="200dp"
                    android:textSize="18sp"
                    android:layout_marginStart="30dp"
                    android:text="@string/location" />
                <EditText
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="235dp"
                    android:id="@+id/location"
                    android:inputType="text"
                    android:singleLine="true"
                    android:background="#FFFFFF"
                    app:boxBackgroundMode="filled"
                    app:boxBackgroundColor="@color/white"
                    app:boxStrokeColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="@string/address"
                    android:textColor="@color/black"
                    android:paddingStart="20dp"
                    android:textSize="16sp"/>
                <Button
                    android:id="@+id/locationButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="300dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/automatic_loction"
                    android:textColor="@color/button_text"
                    android:backgroundTint="@color/button_background"
                    >
                </Button>

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="Profile Picture"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/default_character"
                android:layout_marginTop="10dp"
                android:layout_marginVertical="22dp"/>

            <Button
                android:id="@+id/changeProfilePicButton"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="@color/button_background"
                android:fontFamily="sans-serif"
                android:textColor="@color/button_text"
                android:textSize="12sp"
                android:text="@string/change"
                app:cornerRadius="5dp"
                />


        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/saveButton"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/button_background"
            android:fontFamily="sans-serif"
            android:textColor="@color/button_text"
            android:textSize="25sp"
            android:text="@string/save"
            app:cornerRadius="5dp"
            />


    </LinearLayout>
    </ScrollView>
</FrameLayout>